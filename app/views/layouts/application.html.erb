<!DOCTYPE html>
<html>
  <head>
    <title>Personalproject</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <!--navbar-->
      <div class="nav navbar-fixed-top">
        <div class = 'container'>
            <%=link_to "Spot", root_path, class: 'navbar-header'%>

            <%= form_for(@spot) do |f| %>
            <div class = "form-horizontal pull-right">
              <%= f.text_field :location, :placeholder=>"Location" %>
              <%= link_to "Spot Something", spots_path %>
            </div>
            <% end %>

              <div class = 'signin pull-right'>

              <% if current_user %>
                <%= link_to (current_user.first_name + ' ' + current_user.last_name), user_path(current_user) %>
                <%= link_to "Sign Out", signout_path %>
              <% else %>
                <%= link_to 'Sign In', signin_path %>
                <%= link_to "Sign Up", signup_path %>
              <% end %>
              </div>
        </div>
      </div>

    <div class="body-container">
      <%= yield %>
    </div>

  </body>

  <footer>
    <hr>
    <div class = 'container'>
      <%= link_to "https://www.linkedin.com/profile/view?id=319703917&trk=nav_responsive_tab_profile",
        :target => '_blank' do%>
        <%image_tag("linkedin.png", width: "50em")%>
      <%end%>
    </div>
  </footer>
</html>
