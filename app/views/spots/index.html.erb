<div class = 'container'>
<h1>Spots</h1>
  <table class = 'table'>
    <thead>
      <tr>
        <th>
          <h3>Location</h3>
        </th>

        <th>
          <h3>Date</h3>
        </th>

        <th>
          <h3>Time</h3>
        </th>

        <th>
          <h3>Description</h3>
        </th>

        <th>
          <h3>Others</h3>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @spots.each do |spot| %>
        <tr>
          <td>
            <%= link_to spot.location, spot_path(spot) %>
          </td>

          <td>
            <%= spot.date %>
          </td>

          <td>
            <%= spot.start_time.strftime("%I:%M%p") %>
          </td>

          <td>
            <%= spot.description %>
          </td>

          <td>
            <%= link_to spot.user.full_name, user_path(spot.user) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
