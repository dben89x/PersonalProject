<%= form_for(model, url: path) do |f|%>
  <div class = "row">
    <div class="well col-md-4 col-md-offset-4 text-center">
      <dl class = 'dl-horizontal'>

        <% if @sign_in_error %>
          <div class = 'error'>
            <br><p><%= @sign_in_error %></p>
          </div>
        <% end %>
        <br>

        <h1>Sign in</h1>

        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'E-mail', class: "form-control", autofocus: true%>

        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
        <br>
        <%= f.submit "Sign Up", class: "btn-submit center" %>
      </dl>
    </div>
  </div>
<% end %>
