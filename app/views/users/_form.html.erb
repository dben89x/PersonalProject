<%= form_for(model, url: path) do |f| %>

  <div class = "row">
    <div class="well col-md-4 col-md-offset-4 text-center">
      <dl class = 'dl-horizontal'>

      <h2> <%= title %> </h2>

      <%= render '/errors.html.erb', model: model %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: 'First name', autofocus: true, class: "form-control" %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: 'Last name', class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'E-mail', class: "form-control"%>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: "form-control" %>
      <br>

      <%= f.submit class: 'btn btn-submit' %>

      <% if @edit_user %>
        <%= link_to 'Delete User', user_path(@user), method: :delete, class: 'btn btn-danger' %>
      <% end %>

    </div>
  </div>

<% end %>
